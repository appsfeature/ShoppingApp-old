<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#99000000"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_action_back"
        android:layout_width="@dimen/action_bar_height_video"
        android:layout_height="@dimen/action_bar_height_video"
        android:padding="4dp"
        android:tint="@android:color/white"
        android:src="@drawable/ic_action_search_cross" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@android:color/white"
        style="@style/Toolbar.TitleText"/>

    <ImageView
        android:id="@+id/iv_action_full_screen"
        android:layout_width="@dimen/action_bar_height_video"
        android:layout_height="@dimen/action_bar_height_video"
        android:scaleType="fitXY"
        android:padding="4dp"
        android:src="@drawable/ic_menu_fullscreen"/>

    <ImageView
        android:id="@+id/iv_action_share"
        android:layout_width="@dimen/action_bar_height_video"
        android:padding="4dp"
        android:layout_marginLeft="8dp"
        android:layout_height="@dimen/action_bar_height_video"
        android:scaleType="fitXY"
        android:src="@drawable/ic_menu_share"/>
</LinearLayout>